<?xml version="1.0" encoding="utf-8" ?> 
<Package xmlns="urn:Microsoft.WindowsPhone/PackageSchema.v8.00"
         Owner="$(OEMNAME)" OwnerType="OEM" ReleaseType="Production"
         Platform="arm" Component="ImageSettings" SubComponent="BootLogoMode"> 
   <Components> 
      <OSComponent> 
         <RegKeys>
			  <!-- BootLogoMode settings -->
			  <RegKey KeyName="$(hklm.system)\CurrentControlSet\Control\GraphicsDrivers">
				<!-- value 0 for Not visible and 1 for Visible (Image from UEFI); Default is 1 -->
				<RegValue Name="CddBootScreenMode" Value="1" Type="REG_DWORD"/>
			  </RegKey>
         </RegKeys> 
      </OSComponent> 
   </Components> 
</Package>
