<?xml version="1.0" encoding="utf-8"?>
 <Package xmlns="urn:Microsoft.WindowsPhone/PackageSchema.v8.00"
    Owner="$(OEMNAME)"
    OwnerType="OEM"
    ReleaseType="Production"
    Platform="$(BSPARCH)"
    Component="Provisioning"
    SubComponent="Manual">
    <Components>
       <OSComponent>
       <Files>
        <!-- Manual Provisioning
             Packages are copied to OEM folder
             Provisioning to be triggered in OEMCustomisation.cmd file by calling provtool.
             Advantange of this approach is that we can control the order of applying the provisioning packages
			 Using the existing Enroll and ProSKU ppkgs are example here.
        -->
        <File Source="$(COMDIR)\Packages\Provisioning.Enroll\Provisioning.Enroll.ppkg"
                DestinationDir="$(runtime.root)\OEMInstall\Provisioning" Name="Enroll.ppkg"/>
        <File Source="$(COMDIR)\Packages\Provisioning.ProSKU\Provisioning.ProSKU.ppkg"
                DestinationDir="$(runtime.root)\OEMInstall\Provisioning" Name="ProSKU.ppkg"/>
       </Files>
       </OSComponent>
    </Components>
 </Package>