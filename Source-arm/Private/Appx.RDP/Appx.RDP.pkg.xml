<?xml version="1.0" encoding="utf-8"?>
 <Package xmlns="urn:Microsoft.WindowsPhone/PackageSchema.v8.00"
          Owner="$(OEMNAME)"
          OwnerType="OEM"
          ReleaseType="Production"
          Platform="RPi2"
          Component="Appx"
          SubComponent="RDP">
    <Components>
       <OSComponent>
         <Files>
			 <!-- Copy batch files for appx installation -->
			 <!-- DestinationDir should be always starting with global macros defined in %KITROOT%\Tools\bin\i386\pkggen.cfg.xml-->
             <File Source="$(PRJDIR)\Private\Appx.RDP\AppInstall\AppInstall.bat"
                   DestinationDir="$(runtime.root)\AppInstall"
                   Name="AppInstall.bat"/>
             <File Source="$(PRJDIR)\Private\Appx.RDP\AppInstall\DeployAppx.bat"
                   DestinationDir="$(runtime.root)\AppInstall"
                   Name="DeployAppx.bat"/>

			<!-- Copy appx files and its dependencies -->
             <File Source="$(PRJDIR)\Private\Appx.RDP\AppInstall\RdClient.Windows_10.1.844.0_ARM.appx"
                   DestinationDir="$(runtime.root)\AppInstall"
                   Name="RdClient.Windows_10.1.844.0_ARM.appx"/>
             <File Source="$(PRJDIR)\Private\Appx.RDP\AppInstall\RdClient.Windows_10.1.844.0_x86_arm.cer"
                   DestinationDir="$(runtime.root)\AppInstall"
                   Name="RdClient.Windows_10.1.844.0_x86_arm.cer"/>
             <File Source="$(PRJDIR)\Private\Appx.RDP\AppInstall\Microsoft.NET.Native.Runtime.1.1.appx"
                   DestinationDir="$(runtime.root)\AppInstall"
                   Name="Microsoft.NET.Native.Runtime.1.1.appx"/>
             <File Source="$(PRJDIR)\Private\Appx.RDP\AppInstall\Microsoft.NET.Native.Framework.1.2.appx"
                   DestinationDir="$(runtime.root)\AppInstall"
                   Name="Microsoft.NET.Native.Framework.1.2.appx"/>
              <File Source="$(PRJDIR)\Private\Appx.RDP\AppInstall\Microsoft.VCLibs.ARM.12.00.Universal.appx"
                    DestinationDir="$(runtime.root)\AppInstall"
                    Name="Microsoft.VCLibs.ARM.12.00.Universal.appx"/>
                          <File Source="$(PRJDIR)\Private\Appx.RDP\AppInstall\Microsoft.VCLibs.ARM.14.00.appx"
                                DestinationDir="$(runtime.root)\AppInstall"
                                Name="Microsoft.VCLibs.ARM.14.00.appx"/>
        </Files>
       </OSComponent>
    </Components>
 </Package>